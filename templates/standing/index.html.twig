{% extends 'base.html.twig' %}

{% block title %}Classement - {{ league }} - Saison {{ season }}{% endblock %}

{% block body %}
<h1>Classement - {{ league }} (Saison {{ season }})</h1>

{% if standings is empty %}
    <p>Aucun classement disponible.</p>
{% else %}
    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>Rang</th>
                <th>Équipe</th>
                <th>Points</th>
                <th>Différence de buts</th>
                <th>Matchs joués</th>
                <th>Victoires</th>
                <th>Défaites</th>
                <th>Nuls</th>
            </tr>
        </thead>
        <tbody>
            {% for team in standings %}
                <tr>
                    <td>{{ team.rank }}</td>
                    <td>
                        <img src="{{ team.team.logo }}" alt="{{ team.team.name }}" width="20" style="vertical-align:middle" />
                        {{ team.team.name }}
                    </td>
                    <td>{{ team.points }}</td>
                    <td>{{ team.goalsDiff }}</td>
                    <td>{{ team.all.played }}</td>
                    <td>{{ team.all.win }}</td>
                    <td>{{ team.all.lose }}</td>
                    <td>{{ team.all.draw }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}

{% endblock %}
