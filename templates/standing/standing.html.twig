{% extends 'base.html.twig' %}

{% block title %}Classement - {{ league }} - Saison {{ season }}{% endblock %}

{% block body %}
<h1>Classement - {{ league }} (Saison {{ season }})</h1>

<div style="display: flex; flex-direction: column; margin-bottom: 2rem;">
    <form id="seasonForm" onsubmit="return false;" style="margin-bottom: 1rem;">
        <label for="season-select" style="font-weight: bold; margin-bottom: 0.5rem; display: block;">
            Choisissez l'année :
        </label>
        <select
            name="season"
            id="season-select"
            data-league-id="{{ leagueId }}"
            style="padding: 0.5rem; font-size: 1rem;">
            {% for year in years %}
                <option value="{{ year }}" {% if year == season %}selected{% endif %}>{{ year }}</option>
            {% endfor %}
        </select>
    </form>

    {% if standings is empty %}
        <p>Aucun classement disponible.</p>
    {% else %}
        <table border="1" cellpadding="5" cellspacing="0" style="width: 1000px;">
            <thead>
                <tr>
                    <th>Rang</th>
                    <th>Équipe</th>
                    <th>Points</th>
                    <th>Différence de buts</th>
                    <th>Matchs joués</th>
                    <th>Victoires</th>
                    <th>Défaites</th>
                    <th>Nuls</th>
                </tr>
            </thead>
            <tbody>
                {% for team in standings %}
                    <tr>
                        <td>{{ team.rank }}</td>
                        <td>
                                <a href="{{ path('team_view', { teamId: team.team.id, season: season, league: leagueId }) }}">
                                <img src="{{ team.team.logo }}" alt="{{ team.team.name }}" width="20" style="vertical-align:middle" />
                                {{ team.team.name }}
                            </a>
                        </td>
                        <td>{{ team.points }}</td>
                        <td>{{ team.goalsDiff }}</td>
                        <td>{{ team.all.played }}</td>
                        <td>{{ team.all.win }}</td>
                        <td>{{ team.all.lose }}</td>
                        <td>{{ team.all.draw }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
